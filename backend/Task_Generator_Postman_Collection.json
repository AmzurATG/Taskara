          }
        },
        {
          "name": "Delete File",
          "request": {
            "method": "DELETE",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{access_token}}"
              }
            ],
            "url": {
              "raw": "{{base_url}}/api/files/{{file_id}}",
              "host": ["{{base_url}}"],
              "path": ["api", "files", "{{file_id}}"]
            }
          }
        }
      ]
    },
    {
      "name": "AI Jobs",
