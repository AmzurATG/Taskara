              },
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"file_id\": \"{{file_id}}\",\n  \"job_type\": \"document_parsing\"\n}"
            },
            "url": {
              "raw": "{{base_url}}/api/ai-jobs",
              "host": ["{{base_url}}"],
              "path": ["api", "ai-jobs"]
            }
          }
        },
        {
          "name": "Get AI Job Status",
