    {
      "name": "Work Items",
      "item": [
        {
          "name": "Get Project Work Items",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{access_token}}"
              }
            ],
            "url": {
              "raw": "{{base_url}}/api/projects/{{project_id}}/work-items",
              "host": ["{{base_url}}"],
              "path": ["api", "projects", "{{project_id}}", "work-items"]
            }
          }
        },
        {
          "name": "Get Work Items with Filters",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{access_token}}"
              }
            ],
            "url": {
              "raw": "{{base_url}}/api/projects/{{project_id}}/work-items?item_type=story&status=todo&priority=high",
              "host": ["{{base_url}}"],
              "path": ["api", "projects", "{{project_id}}", "work-items"],
              "query": [
                {
                  "key": "item_type",
                  "value": "story"
                },
                {
                  "key": "status",
                  "value": "todo"
                },
                {
                  "key": "priority",
                  "value": "high"
                }
              ]
            }
          }
        },
        {
          "name": "Get Work Items Hierarchy",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{access_token}}"
              }
            ],
            "url": {
              "raw": "{{base_url}}/api/projects/{{project_id}}/work-items/hierarchy",
              "host": ["{{base_url}}"],
              "path": ["api", "projects", "{{project_id}}", "work-items", "hierarchy"]
            }
          }
        },
